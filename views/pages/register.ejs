<div class="form__container">
    <div class="form__control">
        <form action="/users/register" method="POST">
            <h1>Sign Up</h1>
            <div>
                <label htmFor="name">Full Names</label>
                <input type="text" name="name" id="name" placeholder="Please enter your name">
            </div>
            <div>
                <label htmlFor="email">Email</label>
                <input type="email" name="email" id="email" placeholder="Please enter your email">
            </div>
            <div>
                <label>Password</label>
                <input type="password" name="password" id="password" placeholder="Please enter your password">
            </div>
            <div>
                <label label="pswd">Confirm Password</label>
                <input type="password" name="pwsd" id="pswd" placeholder="Please confirm your password">
            </div>
            <button type=" submit">Register</button>
        </form>
        <p>Already have an account ? <a href="/users/login">Login</a></p>
    </div>
</div>